<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ODrive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#EB6D91</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText"/>

    <style name="EditText.PoppinsNormal14sp8D92A3">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button"/>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/clr_bg_app</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/clr_bg_app</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Cancelled">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>